<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddCommunity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:id="@+id/closePopup"
        android:src="@drawable/ic_outline_close"
        app:civ_border_width="1dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textpost"
        android:text="New Post"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/imgView_line"
        android:layout_below="@+id/textpost"
        android:background="@color/black"
        android:layout_marginTop="5dp" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:id="@+id/uploadPic"

        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imgView_line"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textimage"
        android:text="Upload Image  "
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_below="@+id/uploadPic"
        android:layout_centerHorizontal="true"
        android:drawableRight="@drawable/ic_outline_cloud_upload"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textmsg"
        android:text="Message"
        android:background="@color/black"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:layout_below="@+id/textimage"
        android:layout_marginTop="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/caption"
        android:layout_below="@+id/textmsg"
        android:hint="Write a caption..."
        android:paddingLeft="10dp"
        android:gravity="top"
        android:textColor="@color/black"
        android:paddingTop="5dp"
        android:backgroundTint="@color/white"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/post"
        android:text="Post"
        android:layout_below="@+id/caption"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_button"
        android:layout_marginBottom="10dp" />

</RelativeLayout>