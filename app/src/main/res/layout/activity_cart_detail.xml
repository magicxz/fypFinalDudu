<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartDetail">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/r1"
        android:background="@color/white">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_black_back"
            android:id="@+id/back1"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addtext"
            android:text="Cart"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:textSize="25dp"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:id="@+id/imgView_line"
            android:background="@color/black"
            android:layout_below="@+id/addtext"
            android:layout_marginTop="10dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:layout_below="@+id/r1">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imgcart"
            android:src="@drawable/addcart"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="170dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nocart"
            android:text="Add your cart now !!"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_below="@id/imgcart"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView1"
        android:layout_width="match_parent"
        android:layout_height="420dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recyclerView1"
            android:layout_centerHorizontal="true"
            android:id="@+id/r2">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Subtotal :"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginLeft="28dp"/>

    <TextView
        android:id="@+id/subtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="RM 0.0"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/textView6"
        android:layout_marginLeft="50dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Delivery fee :"
        android:textSize="20sp"
        android:layout_below="@+id/textView6"
        android:textColor="@color/white"/>

        <TextView
            android:id="@+id/deliveryFee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="RM 0.0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_below="@+id/subtotal"
            android:layout_toRightOf="@+id/textView8"
            android:layout_marginLeft="50dp"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Total :"
        android:textSize="20sp"
        android:layout_below="@+id/textView8"
        android:textColor="@color/white"
        android:layout_marginLeft="57dp"/>

    <TextView
        android:id="@+id/totalAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="RM 0.0"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_below="@+id/deliveryFee"
        android:layout_toRightOf="@+id/textView9"
        android:layout_marginLeft="50dp"/>
        </RelativeLayout>

        <Button
            android:id="@+id/checkout"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/r2"
            android:text="Checkout" />

    </RelativeLayout>
</RelativeLayout>