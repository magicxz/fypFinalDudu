<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".order_detail"
    android:background="@color/black">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back"
        android:id="@+id/back1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:adjustViewBounds="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/od"
        android:text="Order Detail"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_below="@+id/back1"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_centerHorizontal="true" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/od"
        android:layout_margin="15dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Your Order Id :"
                android:textSize="17sp"
                android:textColor="@color/red"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fodname"
                android:text="foodname"
                android:textColor="@color/black"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/orderid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="abc"
                android:textSize="17sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/orderid"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Delivery Address :"
                android:textSize="17sp"
                android:textColor="@color/red"/>

            <TextView
                android:id="@+id/currentAddr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t3"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="abc"
                android:textSize="17sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/currentAddr"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Payment Method :"
                android:textSize="17sp"
                android:textColor="@color/red"/>

            <TextView
                android:id="@+id/paymentMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tt1"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:text="abc"
                android:textSize="17sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/paymentMethod"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Status :"
                android:textSize="17sp"
                android:textColor="@color/red"/>

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tt2"
                android:text="abc"
                android:textSize="17sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/status"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Remark :"
                android:textSize="17sp"
                android:textColor="@color/red"/>

            <TextView
                android:id="@+id/remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tt3"
                android:text="no spicy"
                android:textSize="17sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/remark"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Order Date Time :"
                android:textSize="17sp"
                android:textColor="@color/red"/>

            <TextView
                android:id="@+id/orderdatetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tt4"
                android:text="abc"
                android:textSize="17sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/t4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/orderdatetime"
                android:layout_marginTop="10dp"
                android:text="SubTotal (RM) :"
                android:textSize="17sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/red"/>

            <TextView
                android:id="@+id/subtot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t4"
                android:text="abc"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/t5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subtot"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Delivery Fee (RM) :"
                android:textSize="17sp"
                android:textColor="@color/red"/>

            <TextView
                android:id="@+id/delifee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t5"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="abc"
                android:textSize="17sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/t6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/delifee"
                android:layout_marginTop="10dp"
                android:text="Total Amount (RM) :"
                android:textSize="17sp"
                android:textColor="@color/red"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t6"
                android:text="abc"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>